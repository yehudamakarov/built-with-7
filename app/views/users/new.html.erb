<h1>Signup</h1>

<%= link_to 'Sign up with Google', '/auth/google_oauth2' %>
<br>
<%= link_to 'Sign up with Github', '/auth/github' %>

<h3>Or,</h3>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div class="error_explanation">
      <h6><%= pluralize(@user.errors.count, "error") %> must be fixed before this accomplishment can be saved.</h6>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  First Name:
  <br>
  <%= f.text_field :first_name %>
  <br>
  Last Name:
  <br>
  <%= f.text_field :last_name %>
  <br>
  Email Address:
  <br>
  <%= f.email_field :email %>
  <br>
  Password:
  <br>
  <%= f.password_field :password %>
  <br>
  Password Confirmation:
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  <br>
  <%= f.submit 'Sign Up!' %>
<% end %>
