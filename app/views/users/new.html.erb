<h1>Signup</h1>

<%= form_for @user do |f| %>
  Full Name: <%= f.text_field :name %>
  <br>
  Email Address: <%= f.email_field :email %>
  <br>
  Password: <%= f.password_field :password %>
  <br>
  Password Confirmation: <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit 'Sign Up!' %>
<% end %>
