<!DOCTYPE html>
<html>
  <head>
    <title>BuiltWith7</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <% flash.each do |k, v| %>
        <%= content_tag :div, v, class: "flash-#{k}" %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
