<%= form_for @accomplishment do |f| %>
  Title: <%= f.text_field :title %>
  <br>
  Effect: <%= f.text_area :effect %>
  <br>
  <!-- When? <%= f.collection_select :day, @user.days, :id, :name %>
  <br> -->
  Time: <%= f.datetime_select :date_time, { discard_year: true, discard_month: true, minute_step: 15 }  %>
  <br>
  Do This On: <%= f.collection_check_boxes :day_ids, @user.days, :id, :name %>
  <br>
  <%= f.submit "Accomplished!" %>


<% end %>
